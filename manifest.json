{
    "manifest_version": 3,
    "name": "Dipandu Exam Assistant",
    "version": "1.0.0",
    "action": {
        "default_title": "Dipandu Exam Assistant",
        "default_popup": "src/popup/index.html"
    },
    "options_ui": {
        "page": "src/popup/index.html",
        "open_in_tab": true
    },
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": [
                "src/content/index.tsx"
            ],
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>",
        "https://openrouter.ai/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}